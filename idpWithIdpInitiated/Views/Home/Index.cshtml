@model IdpInitiatedSsoViewModel

<div class="welcome-page">
    <div class="row page-header">
        <div class="col-sm-10">
            <h1>
                <img class="icon" src="~/icon.jpg">
                Welcome to IdentityServer4
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-8">
            <h2>Log in using IdP-Initiated SSO</h2>
            <p>

            </p>
            @foreach (var sp in Model.IdpInitiatedSsoEnabledProviders)
            {
                <form method="post" asp-action="Index">
                    <input asp-for="ServiceProviderId" value="@sp.EntityId" hidden />
                    <button type="submit">@sp.EntityId</button>
                </form>
            }
        </div>
    </div>
</div>
